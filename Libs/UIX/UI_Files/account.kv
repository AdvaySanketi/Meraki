<AccountScreen>
    FloatLayout:
        MDIconButton: 
            icon: "arrow-left"
            font_size: sp(40)
            pos_hint: {"center_x": .1, "center_y": .92}
            icon_size: "40sp"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            on_release: 
                app.root.set_current("settings", side="right")
        PLabel:
            text: "Account"
            pos_hint: {"center_x": .5, "center_y": .92}
            font_name: "assets\\Fonts\\Vegan.ttf"
            font_size: "32sp"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1

        PBoxLayout:
            orientation: "vertical"
            adaptive_height: True
            pos_hint: {"center_x": .55, "center_y": .54}
            ListItem:
                text: "Change Mobile Number"
                secondary_text: "Change Registered Phone No."
                icon: "phone-sync"
            ListItem:
                text: "Change Email Address"
                secondary_text: "Change Registered Email ID"
                icon: "email-sync"
            ListItem:
                text: "Change Account Password"
                secondary_text: "Change Old Password"
                icon: "form-textbox-password"
            ListItem:
                text: "Change Security Pin"
                secondary_text: "Change Account Security Pin"
                icon: "account-convert"
            ListItem:
                text: "Log Out"
                secondary_text: "Log Out Of Your Account"
                icon: "logout"
                on_release:
                    app.root.set_current("login")
            ListItem:
                text: "Delete my Account"
                secondary_text: "Delete Account Permanently"
                icon: "delete-forever"
