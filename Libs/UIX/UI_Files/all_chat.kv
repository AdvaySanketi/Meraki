#:import hex kivy.utils.get_color_from_hex

<AChatScreen>
    PBoxLayout:
        orientation: "vertical"
        pos_hint: {'center_y': .53}
        size_hint_y: .99
        PBoxLayout:
            padding: [dp(25), dp(30), dp(5), dp(10)]
            adaptive_height: True
            PLabel:
                text: "Chats"
                font_size: sp(40)
                font_name: "assets\\Fonts\\Vegan.ttf"
                adaptive_height: True
                text_size: self.width, None
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
            MDIconButton:
                icon: "dots-vertical"
                mode: "unstyled"
                font_size: sp(30)
                theme_icon_color: "Custom"
                icon_color: (255/255, 255/255, 255/255, 1)
                icon_size: "40sp"
                on_release: root.show_menu()
        RecycleView:
            data: root.chats
            viewclass: "ChatListItem"
            size_hint_y: .99
            RecycleBoxLayout:
                padding: dp(10)
                spacing: dp(10)
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_size[1]
                default_size_hint: 1, None
                default_size: None, None

    AnchorLayout:
        anchor_x: "center"
        anchor_y: "bottom"
        padding: dp(50)

        MDIconButton:
            icon: "arrow-left"
            font_size: sp(40)
            theme_icon_color: "Custom"
            icon_color: hex("#FEE715FF")
            md_bg_color: hex("#101820FF")
            icon_size: "40sp"
            ripple_scale: 0
            on_release:
                app.root.set_current("home")

<MenuDialogContent>
    orientation: "vertical"
    adaptive_height: True
    padding: dp(15)
    spacing: dp(10)

    ListItem:
        text: "Account"
        secondary_text: "Account details"
        icon: "account-circle"

    ListItem:
        text: "Settings"
        secondary_text: "App preferences"
        icon: "wrench"
        on_release:
            root.parent.parent.dismiss()
            app.root.set_current("settings")

    ListItem:
        text: "Other"
        secondary_text: "Others...."
        icon: "dots-horizontal"