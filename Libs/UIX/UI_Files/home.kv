<HomePage>
    FloatLayout:
        FitImage:
            source:"assets/Images/Backgrounds/bg (1).jpg"
        MDIconButton:
            icon: 'plus'
            theme_icon_color: "Custom"
            size_hint: .1,.1
            pos_hint: {"center_x": .1, "center_y": .94}
            background_color: 0, 0, 0, 0
            color: 255/255, 165/255, 0/255, 1
            icon_color: (255/255, 255/255, 255/255, 1)
            icon_size: "30sp"
            on_release: 
                app.root.set_current("upload")
            canvas.before:
                Color:
                    rgba: (0/255, 0/255, 0/255, 0 )
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [22]

        PLabel:
            text: 'Meraki'
            size_hint: .5,.1
            pos_hint: {"center_x": .5, "center_y": .94}
            font_size: "40sp"
            halign: "center"
            font_name: "assets\\Fonts\\Vegan.ttf"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1

        MDIconButton:
            icon: 'facebook-messenger'
            theme_icon_color: "Custom"
            size_hint: .1,.1
            pos_hint: {"center_x": .9, "center_y": .94}
            background_color: 0, 0, 0, 0
            color: 255/255, 165/255, 0/255, 1
            icon_color: (255/255, 255/255, 255/255, 1)
            icon_size: "30sp"
            on_release: 
                app.root.set_current("all_chat")
            canvas.before:
                Color:
                    rgba: (0/255, 0/255, 0/255, 0 )
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [22]

        MDIconButton:
            id: dp
            icon: root.dp
            icon_size: "40sp"
            pos_hint: {"center_x": .5, "center_y": .8}
            ripple_scale: 0

        PLabel:
            id: wish_txt
            text: root.wish_txt
            size_hint: .5,.1
            pos_hint: {"center_x": .5, "center_y": .68}
            font_size: "40sp"
            halign: "center"
            font_name: "assets\\Fonts\\library.ttf"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
        
        MDBoxLayout:
            pos_hint: {"center_x": .5, "center_y": .14}
            ScrollView:
                bar_width: 0

                MDBoxLayout:
                    adaptive_height: True

                    MDBoxLayout:
                        orientation: 'vertical'
                        adaptive_height: True

                        # Stories
                        ScrollView:
                            size_hint_y: None
                            height: 110
                            bar_width: 0

                            MDBoxLayout:
                                adaptive_width: True
                                spacing: 5
                                padding: 5
                                
                                MDBoxLayout:
                                    adaptive_width: True
                                    padding: 5
                                    spacing: 5
                                    id: stories

                        MDGridLayout:
                            id: timeline
                            adaptive_height: True
                            spacing: '20dp'
                            size_hint_y: None
                            height: self.minimum_height
                            cols: 3
        

        BoxLayout:
            canvas:
                Color:
                    rgb: 0/255, 0/255, 0/255
                Rectangle:
                    size: self.size
            orientation: 'horizontal'
            padding: 25
            spacing: 0
            size_hint: 1, None
            height: 50
            MDIconButton:
                icon: "home"
                theme_icon_color: "Custom"
                size_hint: .0, 0
                pos_hint: {"center_x": .8, "center_y": .1}
                background_color: 0, 0, 0, 0
                color: 255/255, 165/255, 0/255, 1
                icon_color: (255/255, 255/255, 255/255, 1)
                icon_size: "40sp"
                canvas.before:
                    Color:
                        rgba: (0/255, 0/255, 0/255, 0 )
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [22]
            MDIconButton:
                icon: "magnify"
