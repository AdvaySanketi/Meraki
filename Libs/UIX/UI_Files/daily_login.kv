                icon: "blank"
                icon_size: "60sp"
    AnchorLayout:
        anchor_x: "left"
        anchor_y: "bottom"
        padding: dp(20)

        MDIconButton:
            icon: "account-switch"
            font_size: sp(40)
            theme_icon_color: "Custom"
            icon_color: hex("#ADEFD1FF")
            md_bg_color: hex("#00203FFF")
            icon_size: "40sp"
            on_release:
                app.root.set_current("auth", side='right')
    
    AnchorLayout:
        anchor_x: "right"
        anchor_y: "bottom"
        padding: dp(20)

        MDIconButton:
            icon: "backspace"
            font_size: sp(40)
            theme_icon_color: "Custom"
