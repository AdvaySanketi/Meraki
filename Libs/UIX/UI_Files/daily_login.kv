#:import hex kivy.utils.get_color_from_hex

<DLoginScreen>
    MDFloatLayout:
        FitImage:
            source:"assets/Images/Backgrounds/bg (3).jpg"
            opacity: .2
        PLabel:
            text: "Meraki"
            pos_hint: {"center_x": .5, "center_y": .85}
            font_name: "assets\\Fonts\\Vegan.ttf"
            font_size: "80sp"
            halign: "center"
            theme_text_color: "Custom"
            text_color: hex("#ADEFD1FF")
        GridLayout:
            cols: 5
            rows: 1
            size_hint_y: None
            size_hint_x: None
            pos_hint: {"center_x":.267, "center_y":.65}
            MDIconButton:
                id: one
                icon: "checkbox-blank-circle-outline"
                icon_size: "30sp"
                theme_icon_color: "Custom"
                icon_color: hex("#000000FF")
            MDIconButton:
                id: two
                icon: "checkbox-blank-circle-outline"
                icon_size: "30sp"
                theme_icon_color: "Custom"
                icon_color: hex("#000000FF")
            MDIconButton:
