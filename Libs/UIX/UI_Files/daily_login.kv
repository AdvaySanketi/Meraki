                icon_size: "30sp"
                theme_icon_color: "Custom"
                icon_color: hex("#000000FF")
        GridLayout:
            cols: 3
            rows: 4
            size_hint_y: None
            size_hint_x: None
            pos_hint: {"center_x":.3, "center_y":.5}
            MDIconButton:
                icon: "numeric-1"
                theme_icon_color: "Custom"
                icon_color: hex("#ADEFD1FF")
                md_bg_color: hex("#00203FFF")
                icon_size: "60sp"
                on_release:
                    root.input(1)
            MDIconButton:
                icon: "numeric-2"
                theme_icon_color: "Custom"
